<body>
    <div class="iconos_agregar_campos">
        <div class="container text-center">
            <h1 class="bg-light py-4text-info"><i class="icon-heartbeat btnCorazon"></i>Citas Medicas</h1>
        </div>
        <div class="d-flex justify-content-center">
            <form class="w-50">
                <input type="text" id="usuario" class="form-control" readonly placeholder="Cedula" autocomplete="off" >
                <input type="text" id="nombre" class="form-control" placeholder="Nombre" autocomplete="off" >
                <div class="row">
                    <div class="col">
                        <input type="text" id="correo" class="form-control" placeholder="Correo" autocomplete="off" >
                    </div>
                    <div class="col">
                        <input type="text" id="ciudad" class="form-control" placeholder="Ciudad" autocomplete="off" >
                    </div>
                </div>
            </form>
        </div>

            <!--Crear, Eliminar y Agregar -->
            <div class="d-flex justify-content-center">
                <button class="btn btn-success" id="btn-create">Crear</button>
                <button class="btn btn-primary" id="btn-read">Leer</button>
                <button class="btn btn-warning" id="btn-update">Actualizar</button>
                <button class="btn btn-danger" id="btn-delete">Eliminar</button>
            </div>

            <!--Crear la tabla-->

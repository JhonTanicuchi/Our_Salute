<!-- MAIN CONTECT -->
<div class="main_contect">
    <main class="main_app">
        <section class="dash_title">
            <h2 id="title_modules">Cita Medica</h2>
            <a href="/home"><span class="far fa-times-circle"></span></a>
        </section>
    
        <div class="Turnos_grid">
            <div class="container1">
                <h1 class="bg-light py-4text-info"><i class="las la-medkit Corazon"></i>Citas Medicas</h1>
            </div>
            <!--Crear los input-->
            <div class="container2">
                <div class="texto1">
                    <input type="text" name="ID" placeholder="ID" required>
                </div>
                <div class="texto1">
                    <input type="text" name="Cedula" placeholder="Cedula" required>
                </div>
                <div class="texto1">
                    <input type="text" name="Nombre" placeholder="Nombre" required>
                </div>
                <div class="texto1">
                    <input type="text" name="Correo" placeholder="Correo" required>
                </div>
                <div class="texto1">
                    <input type="text" name="Ciudad" placeholder="Ciudad" required>
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <button class="btn btn-success" id="btn-create">Crear</button>
                <button class="btn btn-warning" id="btn-update">Editar</button>
                <button class="btn btn-danger" id="btn-delete">Eliminar</button>
            </div>
        
            <div class="container">
                <table class="tabla_cita">
                    <caption><i class="las la-medkit"</i>Citas Medicas</caption>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Cedula</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Especialista</th>
                            <th>Fecha</th>
                            <th>Hora</th>
                            <th>Enfermedad</th>
                            <th>Editar</th>
                            <th>Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each citas_medicas}}
                        <tr>
                            <td>{{ID_cita_medica}}</td>
                            <td class="td_person">{{Cedula}}</td>
                            <td>{{Nombre}}</td>
                            <td>{{Correo}}</td>
                            <td>{{Ciudad}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
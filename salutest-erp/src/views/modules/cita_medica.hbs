<!-- MAIN CONTECT -->
<div class="main_contect">
    <main class="main_app">
        <section class="dash_title">
            <h2 id="title_modules">Generar cita médica</h2>
            <a href="/home"><span class="far fa-times-circle"></span></a>
        </section>
    
        <div class="Turnos_grid">
            <div class="container1">
                <h1 class="bg-light py-4text-info"><i class="las la-medkit Corazon"></i>Citas Medicas</h1>
            </div>
            <!--Crear los input-->
            <form action="/add " method="post"> 
                <div class="container2">

                    <div class="texto1">
                        <h4>Paciente</h4>
                        <input type="" name="" placeholder="Cedula" required>
                    </div>
                    <div class="texto1">
                        <h4>Medico</h4>
                        <input type="" name="" placeholder="Cedula" required>
                    </div>
                    <div class="texto1">
                        <h4>Especialidad</h4>
                        <select name="virtual">
                            <option>Seleccione</option>
                            <option>Cardiología</option>
                            <option>Infectología</option>
                            <option>Neurología</option>
                            <option>Patología</option>
                            <option>Reumatología</option>
                            <option>Urología</option>
                        </select>
                    </div>
                    <div class="texto1">
                        <h4>Fecha Asignada</h4>
                        <input type="date" name="fecha_asignada" required>
                    </div>
                    <div class="texto1">
                        <h4>Hora Inicio</h4>
                        <input type="time" name="hora_inicio" required>
                    </div>
                    <div class="texto1">
                        <h4>Tipo Cita</h4>
                        <select name="virtual">
                            <option>Seleccione</option>
                            <option>Virtual</option>
                            <option>Presencial</option>
                        </select>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button class="btn btn-success" type="submit" id="btn-create">Crear</button>
                    <button class="btn btn-warning" id="btn-update">Editar</button>
                    <button class="btn btn-danger" id="btn-delete">Eliminar</button>
                </div>
            </form>
            <div class="container">
                <table class="tabla_cita">
                    <caption><i class="las la-medkit"</i>Citas Medicas</caption>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Fecha Asignada</th>
                            <th>Hora Inicio</th>
                            <th>Hora Fin</th>
                            <th>Virtual</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each citas_medicas}}
                        <tr>
                            <td>{{id_cita_medica}}</td>
                            <td class="td_person">{{fecha_asignada}}</td>
                            <td>{{hora_inicio}}</td>
                            <td>{{hora_fin}}</td>
                            <td>{{virtual}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </main>
</div>
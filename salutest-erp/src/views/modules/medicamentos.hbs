<!-- MAIN CONTECT -->
<div class="main_contect">
    <div class="cuerpo_medicamentos">
        <main class="main_app">
            <section class="dash_title">
                <h2 id="title_modules">Medicamentos</h2>
                <a href="/home"><span class="far fa-times-circle"></span></a>
            </section>

            <table class="contenido_medicamentos">
                    <tr>
                        <td>
                            <form onsubmit="event.preventDefault();onSubmit();" autocomplete="of">
                                <div>
                                    <div>
                                        <label for="cod">Codigo del producto:</label>
                                        <input name="cod" class="input" id="cod" type="text" placeholder="Introduzca un codigo al producto" required>
                                    </div>
                                    <div>
                                        <label for="pro">Nombre del producto:</label>
                                        <input name="pro" class="input" id="pro" type="text" placeholder="Introduzca un nombre al producto" required>
                                    </div>
                                    <div>
                                        <label for="peso">Peso en gramos:</label>
                                        <input name="peso" class="input" id="peso" type="Text" placeholder="Introduzca el peso del producto" required>
                                    </div>
                                    <div>
                                        <label for="pre">Precio en dollares:</label>
                                        <input name="pre" class="input" id="pre" type="number" placeholder="Introduzca el precio del producto" required>
                                    </div>

                                    <input class="submit" type="submit" value="AÃ±adir">
                                </div>
                            </form>

                            <td>
                                <div class="contenedor_medicamentos">
                                    <table class="tabla_medicamentos" id="tabla_medicamentos">
                                        <div class="fuction"></div>
                                        <thead>
                                            <tr class="tr_medicamentos">
                                                <th>Codigo</th>
                                                <th>Nombre</th>
                                                <th>Peso</th>
                                                <th>Precio</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each medicamentos}}
                                                <tr>
                                                    <td>{{cod}}</td>
                                                    <td>{{pro}}</td>
                                                    <td>{{peso}}</td>
                                                    <td>{{pre}}</td>
                                                </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </td>
                        </td>
                    </tr>
            </table>